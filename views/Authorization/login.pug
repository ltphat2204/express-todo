doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title #{title} - To do app
        link(rel="icon" href="/assets/logo.ico" sizes="50x50")
        link(rel="stylesheet" href="/styles/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

    body
        .text-center
            h1.display-3 Welcome back
            hr
        section.container
            form.row.g-3(method="post" action="/api/authorization/login")
                .mb-3
                    label.form-label(for="username") Username
                    input.form-control#username(name="username" placeholder="Your username" required)
                .mb-3
                    label.form-label(for="password") Password
                    input.form-control#password(name="password" type="password" placeholder="Your password" required)
                .mb-3
                    button.btn.btn-primary(type="submit") Login 
            
            |   New member? 
            a(href="/authorization/register") Register now!
            
    script(src='/scripts/script.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
